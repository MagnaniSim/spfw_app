
doctype html
html(lang='en')
  include common/head.pug
  +head("Search Professionals")
  body
      header
          include common/navbar.pug
          +navbar(user)
          .container
              .row
                  .col-sm-12.offset-md-2.col-md-8
                      .jumbotron
                          h2.text-center Search Professionals
                          .row
                              .col-sm-12.col-md-12.col-xs-12
                                  form(action='/', method='POST')
                                      div.formgroup
                                          input(placeholder='Please enter the profession', required=true, name='profession', type='', value='').form-control
                                          if (errors && errors.professionals)
                                              p.small.text-danger #{errors.professionals}
                                          button.mt-3.btn.btn-primary(type='submit') Search
                                  if (userData.is_pro)
                                      h2.text-center Update Data
                                      .row
                                          .col-sm-12.col-md-12.col-xs-12
                                              form(action='/proupdate', method='POST')
                                                  input(placeholder='Name', required=true, name='proName', type='', value=(errors? wrongInput.proName : ((userData.Professional && userData.Professional.firstName)?userData.Professional.firstName:''))).form-control
                                                  if (errors && errors.proName)
                                                      p.small.text-danger #{errors.proName}
                                                  input(placeholder='Surname', required=true, name='proSurname', type='', value=(errors? wrongInput.proSurname : ((userData.Professional && userData.Professional.lastName)?userData.Professional.lastName:''))).form-control
                                                  if (errors && errors.proSurname)
                                                      p.small.text-danger #{errors.proSurname}
                                                  input(placeholder='Profession', required=true, name='proProfession', type='', value=(errors? wrongInput.proProfession : ((userData.Professional && userData.Professional.profession)?userData.Professional.profession:''))).form-control
                                                  if (errors && errors.proProfession)
                                                      p.small.text-danger #{errors.proProfession}
                                                  input(placeholder='Phone number', required=true, name='proNumber', type='', value=(errors? wrongInput.proNumber : ((userData.Professional && userData.Professional.phoneNumber)?userData.Professional.phoneNumber:''))).form-control
                                                  if (errors && errors.proNumber)
                                                      p.small.text-danger #{errors.proNumber}
                                                  input(placeholder='Description', required=false, name='proDescription', type='', value=(errors? wrongInput.proDescription : ((userData.Professional && userData.Professional.description)?userData.Professional.description:''))).form-control
                                                  if (errors && errors.proDescription)
                                                      p.small.text-danger #{errors.proDescription}
                                                  button.mt-3.btn.btn-primary(type='submit') Update

      include common/footer.pug
      +footer()